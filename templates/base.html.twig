<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- Tell the browser to be responsive to screen width -->
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <link rel="shortcut icon" href="{{ asset('static/img/favicon.ico') }}" type="image/x-icon">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- Bootstrap 3.3.7 -->
            <link rel="stylesheet" href="{{ asset('static/css/bootstrap.css') }}">
            <!-- Font Awesome -->
            <link rel="stylesheet" href="{{ asset('static/css/font-awesome.min.css') }}">
            <!-- Ionicons -->
            <link rel="stylesheet" href="{{ asset('static/css/ionicons.min.css') }}">
            <!-- Theme style -->
            <link rel="stylesheet" href="{{ asset('static/css/AdminLTE.css') }}">
            <!-- AdminLTE Skins. Choose a skin from the css/skins
                 folder instead of downloading all of them to reduce the load. -->
            <link rel="stylesheet" href="{{ asset('static/css/skin-blue.css') }}">
            <!-- Custom CSS -->
            <link rel="stylesheet" href="{{ asset('static/css/symfbook.css') }}">
        {% endblock %}

        <!-- Google Font -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </head>
    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">
            {% include 'header.html.twig' %}

            {% include 'sidebar.html.twig' %}
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                {% block content %}{% endblock %}
            </div>
            <footer class="main-footer">
                <strong>Copyright &copy; 2016-2017 <a href="https://github.com/Genjiff">Lucas Borges</a>.</strong> All rights
                reserved.
            </footer>

            <!-- jQuery 3 -->
            <script src="{{ asset('static/js/jquery.min.js') }}"></script>
            <!-- Bootstrap 3.3.7 -->
            <script src="{{ asset('static/js/bootstrap.min.js') }}"></script>
            <!-- AdminLTE js -->
            <script src="{{ asset('static/js/adminlte.js') }}"></script>

            <script>
                //Javascript for sidebar active element
                var path = window.location.pathname;
                $(".sidebar-menu li a").each(function () {
                    if($(this).attr("href") === path) {
                        $(this).parent().attr("class", "active");
                    }
                });
            </script>
            {% block js %}{% endblock %}
            {% block modal %}{% endblock %}
        </div>
    </body>
</html>
