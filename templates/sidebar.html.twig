<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                {% if app.user.profilePicture != null %}
                    <img src="{{ asset('upload/profile_pictures/' ~ app.user.profilePicture) }}" class="img-circle" alt="User Image" />
                {% else %}
                    <img src="{{ asset('static/img/default-profile.jpg') }}" class="img-circle" alt="User Image" />
                {% endif %}
            </div>
            <div class="pull-left info">
                <p>{{ app.user.fullname }}</p>
                <a><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li>
                <a href="{{ path('app_profile') }}">
                    <i class="fa fa-user"></i> <span>Profile</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_friends') }}">
                    <i class="fa fa-users"></i> <span>Friends</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_explore') }}">
                    <i class="fa fa-compass"></i> <span>Explore</span>
                </a>
            </li>
            <li>
                <a href="{{ path('app_settings') }}">
                    <i class="fa fa-cog"></i> <span>My info</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>