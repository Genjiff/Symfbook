{% extends 'base.html.twig' %}

{% block title %}
{{ app.user.fullname }}
{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            {{ app.user.fullname }}'s Profile
        </h1>
    </section>

    <section class="content">

        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        {% if app.user.profilePicture != null %}
                            <img src="{{ asset('upload/profile_pictures/' ~ app.user.profilePicture) }}" class="profile-user-img img-responsive img-circle" alt="User profile picture" />
                        {% else %}
                            <img src="{{ asset('static/img/default-profile.jpg') }}" class="profile-user-img img-responsive img-circle" alt="User profile picture" />
                        {% endif %}

                        <h3 class="profile-username text-center">{{ app.user.fullname }}</h3>

                        <p class="text-muted text-center">
                            {{ app.user.aboutMe }}
                        </p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Friends</b> <a class="pull-right">13,287</a>
                            </li>
                        </ul>

                        {#<a href="#" id="add-friend-button" class="btn btn-primary btn-block"><i class="fa fa-user-plus" aria-hidden="true"></i> <b>Add friend</b></a>#}
                        {#<a href="#" id="send-message-button" class="btn btn-primary btn-block"><i class="fa fa-envelope" aria-hidden="true"></i> <b>Send Message</b></a>#}
                        <a href="#" id="post-timeline-button" class="btn btn-primary btn-block"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> <b>Post in my timeline</b></a>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

                <!-- About Me Box -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">About Me</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {% if app.user.education != null %}
                            <strong><i class="fa fa-book margin-r-5"></i> Education</strong>

                            <p class="text-muted">
                                {{ app.user.education }}
                            </p>
                        {% endif %}
                        {% if app.user.location != null %}
                            <hr>
                            <strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>

                            <p class="text-muted">{{ app.user.location }}</p>
                        {% endif %}
                        {% if app.user.age != null %}
                            <hr>

                            <strong><i class="fa fa-vcard-o margin-r-5"></i> Age</strong>

                            <p class="text-muted">{{ app.user.age }}</p>
                        {% endif %}
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#activity" data-toggle="tab">Wall</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="active tab-pane" id="activity">
                            {% for post in posts %}
                                <!-- Post -->
                                <div class="post">
                                    <div class="user-block">
                                        {% if post.userFrom.profilePicture != null %}
                                            <img class="img-circle img-bordered-sm" src="{{ asset('upload/profile_pictures/' ~ post.userFrom.profilePicture) }}" alt="user image">
                                        {% else %}
                                            <img class="img-circle img-bordered-sm" src="{{ asset('static/img/default-profile.jpg') }}" alt="user image">
                                        {% endif %}
                                        <span class="username">
                                            <a href="#">{{ post.userFrom.fullname }}</a>
                                        </span>
                                        <span class="description">7:30 PM today</span>
                                    </div>
                                    <!-- /.user-block -->
                                    <p>
                                        {{ post.message }}
                                    </p>
                                </div>
                                <!-- /.post -->
                            {% endfor %}
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

    </section>
{% endblock %}

{% block modal %}
    <div class="modal fade" id="modal-send-message">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="#" method="post">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Send your message:</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group has-feedback">
                            <textarea rows="8" class="form-control" placeholder="Write your message:" name="_message" id="_message"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    <div class="modal fade" id="modal-post-timeline">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="#" method="post">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Post on timeline</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group has-feedback">
                            <textarea rows="8" class="form-control" placeholder="How are you feeling today?" name="_timeline-message" id="_timeline-message"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Post</button>
                    </div>
                </form>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
{% endblock %}

{% block js %}
    <script>
        $("#send-message-button").on("click", function () {
            $("#modal-send-message").modal("show");
        });

        $("#post-timeline-button").on("click", function () {
            $("#modal-post-timeline").modal("show");
        });
    </script>
{% endblock %}